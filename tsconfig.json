{
  "compilerOptions": {
    "resolveJsonModule": true,
    "typeRoots": [ "<types-directory-created-in-#1>", "./node_modules/@types"],

    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "module": "esnext",
    "target": "es2017",
    "lib": ["es6","es5", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "paths": {
      "@app/*": ["src/app/*"],
      "@assets/*": ["node_modules/@patternfly/react-core/dist/styles/assets/*"],
      "test-utils": ["src/app/utils/testUtils"]
    },
    "importHelpers": true,
    "skipLibCheck": true

  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.jsx",
    "**/*.js",
    "setupTests.ts"
  ],
  "exclude": ["node_modules"],
  "types": ["node", "jest", "@testing-library/jest-dom"],
}
